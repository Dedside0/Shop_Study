@model Favorite
@{
    ViewData["Title"] = "Избранное";
}

<div class="text-center text-uppercase text-success mb-5 mt-5">
    <h2 class="row-title">Избранное</h2>
</div>

@if (Model != null && Model.Items?.Count > 0)
{
    <div class="row justify-content-center mt-3">
        @foreach (var product in Model.Items)
        {
            <div class="col-3 mb-3">
                <div class="card shadow">
                    <img class="card-img-top" src=@product.Product.ImagePath alt="...">
                    <div class="card-body text-center">
                        <a class="text-success" 
                           asp-controller="КОНТРОЛЛЕР"
                           asp-action="МЕТОД_КОНТРОЛЛЕРА"
                           asp-route-id="ID_ТОВАРА">
                            <h5>@product.Product.Name</h5>
                        </a>
                        <h2 class="text-danger">@product.Product.Cost</h2>
                        <hr />
                        <h6>@product.Product.Description</h6>
                        <hr />
                        <a class="btn btn-success"
                           asp-controller="Cart"
                           asp-action="Add"
                           asp-route-productId=@product.Product.Id>
                            Добавить в корзину
                        </a>
                        <a class="btn btn-outline-danger mt-3"
                           asp-controller="Favorite"
                           asp-action="Remove"
                           asp-route-productId=@product.Product.Id>
                            Убрать из избранного
                        </a>
                    </div>
                </div>
            </div>
        }

        <div class="text-center mt-5">
            <a class="btn btn-outline-danger"
               asp-controller="Favorite"
               asp-action="Clear"
               asp-route-userId=@Model.UserId>
                Очистить список избранного
            </a>
        </div>
    </div>
}
else
{
    <div class="text-center">
        <h2 class="row-title">В списке избранного нет товаров!</h2>
    </div>

}

<div class="text-center m-5">
    <a class="btn btn-outline-success"
       asp-controller="Home"
       asp-action="Index">
        Продолжить покупки
    </a>
</div>
